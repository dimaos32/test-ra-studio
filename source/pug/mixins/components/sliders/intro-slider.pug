mixin intro-slider(slides)
  .intro-slider
    .intro-slider__wrapper.swiper-container
      ul.intro-slider__slides.swiper-wrapper
        each slide in slides
          - const {path, name, type, altText} = slide
          li.intro-slider__slide.swiper-slide
            +img(path, name, type, 1920, 1000, altText)
    .intro-slider__controls
      +round-slider-btn(false)
      .intro-slider__pagination
      +round-slider-btn(true)

